<resources>
    <!--曹建明添加-->
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavibarBtnStyle">
        <item name="android:gravity">center</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/s7</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="gridviewspan">
        <item name="android:horizontalSpacing">3dp</item>
        <item name="android:verticalSpacing">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">2</item>
    </style>
</resources>
