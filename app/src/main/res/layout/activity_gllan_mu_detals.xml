<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imageview_details_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/textview_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="title"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <TextView
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="简介"
            />

        <TextView
            android:padding="5dp"
            android:id="@+id/textview_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jianjie"/>

        <TextView
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="列表"/>

        <com.virgil.presentpj.widget.ExpandListView
            android:id="@+id/listview_details_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>
