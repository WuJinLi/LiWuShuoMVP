<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--栏目的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="栏目"
                    android:textSize="10dp"
                    />

                <ImageView
                    android:id="@+id/imageview_lanmu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_tab_right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageview_lanmu"
                    android:text="查看全部"
                    android:textSize="10dp"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_lanmu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <!--品类的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="品类"
                    android:textSize="10dp"
                    />

                <ImageView
                    android:id="@+id/imageview_pinlei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_tab_right"
                    />

                <TextView
                    android:id="@+id/textview_gonglue_pinlei_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageview_pinlei"
                    android:text="查看全部"
                    android:textSize="10dp"
                    />
            </RelativeLayout>

            <com.virgil.presentpj.widget.MyGridView
                android:id="@+id/gridview_pinlei"
                style="@style/gridviewspan"/>
                />
        </LinearLayout>


        <!--风格的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="风格"
                    android:textSize="10dp"
                    />
            </RelativeLayout>

            <com.virgil.presentpj.widget.MyGridView
                android:id="@+id/gridview_style"
                style="@style/gridviewspan"/>
                />
        </LinearLayout>

        <!--对象的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="对象"
                    android:textSize="10dp"
                    />

                <ImageView
                    android:id="@+id/imageview_object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_tab_right"
                    />

                <TextView
                    android:id="@+id/textview_gonglue_object_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageview_object"
                    android:text="查看全部"
                    android:textSize="10dp"
                    />
            </RelativeLayout>

            <com.virgil.presentpj.widget.MyGridView
                android:id="@+id/gridview_object"
                style="@style/gridviewspan"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
