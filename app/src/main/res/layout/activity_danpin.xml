<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/danpin_activity_imageviewtop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/danpin_activity_textviewtop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                />
            <TextView
                android:id="@+id/danpin_activity_textviewpric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="价格"
                />
            <TextView
                android:id="@+id/danpin_activity_textviewjieshao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品介绍"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/grey"
            >

        </View>
        <GridView
            android:id="@+id/danpin_activity_gridview"
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:numColumns="2"
            >
        </GridView>
    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>

